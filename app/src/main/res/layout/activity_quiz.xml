<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projetointegrador.historyquiz.QuizActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/fundo1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="400dp"
        android:layout_height="45dp"

        android:background="@drawable/fundotool"></android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="QUESTÃO 1"
        android:textSize="22sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/questionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questão"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/respostaBtn1"
        android:layout_width="@dimen/respostaBtn_width"
        android:layout_height="@dimen/respostaBtn_height"
        android:layout_marginTop="80dp"
        android:background="@drawable/fundotool"
        android:onClick="checarResposta"
        android:text="Resposta 1"
        android:textColor="@android:color/white" />

    <Button
        android:textColor="@android:color/white"
        android:id="@+id/respostaBtn2"
        android:layout_width="@dimen/respostaBtn_width"
        android:layout_height="@dimen/respostaBtn_height"
        android:layout_marginTop="6dp"
        android:background="@drawable/fundotool"
        android:onClick="checarResposta"
        android:text="Resposta 2" />

    <Button
        android:textColor="@android:color/white"
        android:id="@+id/respostaBtn3"
        android:layout_width="@dimen/respostaBtn_width"
        android:layout_height="@dimen/respostaBtn_height"
        android:layout_marginTop="6dp"
        android:background="@drawable/fundotool"
        android:onClick="checarResposta"
        android:text="Resposta 3" />

    <Button
        android:textColor="@android:color/white"
        android:id="@+id/respostaBtn4"
        android:layout_width="@dimen/respostaBtn_width"
        android:layout_height="@dimen/respostaBtn_height"
        android:layout_marginTop="6dp"
        android:background="@drawable/fundotool"
        android:onClick="checarResposta"
        android:text="Resposta 4" />

</LinearLayout>
